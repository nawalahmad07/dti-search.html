<body>
    <div class="container">
        <!-- Header -->
        <div class="header">
            <h1>DTI Conference 2026</h1>
            <p>Registration Search System</p>
        </div>

        <!-- Search Section -->
        <div class="search-section">
            <div class="search-title">Search Registrations</div>
            
            <div class="search-controls">
                <div class="form-group">
                    <label for="tribeSearch">Search by Tribe Name</label>
                    <input type="text" id="tribeSearch" placeholder="e.g., Morongo, Pechanga...">
                </div>
                
                <div class="form-group">
                    <label for="invoiceSearch">Search by Invoice Number</label>
                    <input type="text" id="invoiceSearch" placeholder="e.g., DTI-2026-ABC123...">
                </div>
                
                <button class="search-btn" onclick="searchData()">Search</button>
            </div>

            <div id="status"></div>
        </div>

        <!-- Results Section -->
        <div class="results-section" id="resultsSection" style="display: none;">
            <div class="results-header">
                <div class="results-title">Search Results</div>
                <button class="print-btn" onclick="window.print()">Print Results</button>
            </div>
            
            <div class="results-content" id="resultsContent">
                <!-- Results will be displayed here -->
            </div>
        </div>
    </div>

    <script>
        // REPLACE THIS WITH YOUR ACTUAL GOOGLE APPS SCRIPT URL
        const SCRIPT_URL = 'https://script.google.com/macros/s/AKfycbxSgrPkLV7yJbH_2eXAqM7kl2eeHOi-tv0m3w8EWNj5Z5lSiIQ8kVq_w1eJkRl5ZUd0/exec';

        async function searchData() {
            const tribe = document.getElementById('tribeSearch').value.trim();
            const invoice = document.getElementById('invoiceSearch').value.trim();
            
            if (!tribe && !invoice) {
                showStatus('Please enter either a tribe name or invoice number to search.', 'error');
                return;
            }

            showStatus('Searching registrations...', 'loading');
            document.getElementById('resultsSection').style.display = 'none';

            try {
                const params = new URLSearchParams();
                params.append('action', 'search');
                if (tribe) params.append('tribe', tribe);
                if (invoice) params.append('invoice', invoice);

                const response = await fetch(`${SCRIPT_URL}?${params}`);
                const data = await response.json();

                if (data.success) {
                    if (data.data && data.data.length > 0) {
                        showStatus(`Found ${data.totalFound} registration(s)`, 'success');
                        displayResults(data);
                        document.getElementById('resultsSection').style.display = 'block';
                    } else {
                        showStatus('No registrations found matching your search criteria.', 'error');
                    }
                } else {
                    showStatus('Error: ' + (data.error || 'Search failed'), 'error');
                }
            } catch (error) {
                console.error('Search error:', error);
                showStatus('Network error: ' + error.message, 'error');
            }
        }

        function displayResults(data) {
            const resultsContent = document.getElementById('resultsContent');
            
            resultsContent.innerHTML = data.data.map(tribe => `
                <div class="tribe-card">
                    <!-- Tribe Header -->
                    <div class="tribe-header">
                        <div class="tribe-name">${tribe.tribe}</div>
                        <div class="tribe-stats">
                            <div class="stat-badge">${tribe.counts.youth} Youth</div>
                            <div class="stat-badge">${tribe.counts.chaperones} Chaperones</div>
                        </div>
                    </div>

                    <!-- Invoice Information -->
                    <div class="invoice-info">
                        <div class="invoice-grid">
                            <div class="invoice-item">
                                <div class="invoice-label">Invoice Number</div>
                                <div class="invoice-value">${tribe.invoice}</div>
                            </div>
                            <div class="invoice-item">
                                <div class="invoice-label">Registration Date</div>
                                <div class="invoice-value">${tribe.registrationDate}</div>
                            </div>
                            <div class="invoice-item">
                                <div class="invoice-label">Payment Method</div>
                                <div class="invoice-value">${tribe.paymentInfo.method}</div>
                            </div>
                            <div class="invoice-item">
                                <div class="invoice-label">Payment Status</div>
                                <div class="invoice-value">${tribe.paymentInfo.status}</div>
                            </div>
                            <div class="invoice-item">
                                <div class="invoice-label">Total Amount</div>
                                <div class="invoice-value">$${tribe.paymentInfo.amount}</div>
                            </div>
                        </div>
                    </div>

                    <!-- Youth Attendees -->
                    <div class="section-title">Youth Attendees (${tribe.youth.length})</div>
                    
                    ${tribe.youth.length > 0 ? `
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Age</th>
                                <th>Grade</th>
                                <th>Gender</th>
                                <th>Shirt Size</th>
                            </tr>
                        </thead>
                        <tbody>
                            ${tribe.youth.map(youth => `
                                <tr>
                                    <td><strong>${youth.name || 'N/A'}</strong></td>
                                    <td>${youth.age || '-'}</td>
                                    <td>${youth.grade || '-'}</td>
                                    <td>${youth.gender || '-'}</td>
                                    <td>${youth.shirtSize || '-'}</td>
                                </tr>
                            `).join('')}
                        </tbody>
                    </table>
                    ` : '<div class="no-data">No youth attendees registered</div>'}

                    <!-- Shirt Size Summary -->
                    ${Object.keys(tribe.shirtSizes).length > 0 ? `
                    <div style="margin-top: 15px;">
                        <div class="section-title">Shirt Size Summary</div>
                        <div class="shirt-summary">
                            ${Object.entries(tribe.shirtSizes).map(([size, count]) => `
                                <div class="shirt-badge">${size}: ${count}</div>
                            `).join('')}
                        </div>
                    </div>
                    ` : ''}

                    <!-- Chaperones -->
                    <div class="section-title">Chaperones (${tribe.chaperones.length})</div>
                    
                    ${tribe.chaperones.length > 0 ? `
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Title</th>
                                <th>Phone</th>
                            </tr>
                        </thead>
                        <tbody>
                            ${tribe.chaperones.map(chap => `
                                <tr>
                                    <td><strong>${chap.name || 'N/A'}</strong></td>
                                    <td>${chap.title || '-'}</td>
                                    <td>${chap.phone || '-'}</td>
                                </tr>
                            `).join('')}
                        </tbody>
                    </table>
                    ` : '<div class="no-data">No additional chaperones registered</div>'}
                </div>
            `).join('');
        }

        function showStatus(message, type) {
            const statusDiv = document.getElementById('status');
            statusDiv.textContent = message;
            statusDiv.className = `status ${type}`;
        }

        // Allow Enter key to search
        document.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchData();
            }
        });

        // Show initial instructions
        showStatus('Enter a tribe name or invoice number to search registrations', 'success');
    </script>
</body>
</html>
